<Page x:Class="VkAudioSync.Views.DirExplorerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VkAudioSync.Views"
      mc:Ignorable="d" 
      d:DesignHeight="430" d:DesignWidth="480"
      Background="AliceBlue"
      Title="DirExplorerPage">
    <Grid>

        <Label Content="Выберите папку для сохранения" HorizontalAlignment="Left" Margin="16,12,0,0" VerticalAlignment="Top"/>
        <TreeView Name="DirectoryExplorerTreeView" HorizontalAlignment="Center" Height="315" Margin="0,50,0,0" VerticalAlignment="Top" Width="450" Loaded="DirectoryExplorerTreeView_Loaded" SelectedItemChanged="DirectoryExplorerTreeView_SelectedItemChanged"/>
        <Label Name="PathLabel" Content="Path" HorizontalAlignment="Left" Margin="16,360,0,0" VerticalAlignment="Top"/>
        <Button Content="Выбрать" HorizontalAlignment="Left" Margin="15,386,0,0" VerticalAlignment="Top" Width="450" Height="35" Click="Button_Click"/>

    </Grid>
    
</Page>
